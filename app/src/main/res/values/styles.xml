<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- change the default text attributes -->
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSize</item>

        <!-- Override the default styles -->
        <item name="editTextStyle">@style/editText</item>
        <item name="checkboxStyle">@style/checkBox</item>
        <item name="buttonStyle">@style/button</item>
    </style>

    <!-- EditText style -->
    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/headerSize</item>
    </style>

    <!-- Button style -->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- CheckBox style -->
    <style name="checkBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingLeft">@dimen/checkBoxPadding</item>
    </style>

    <!-- Margin style for the Layout -->
    <style name="quizzMarginLayout">
        <item name="android:layout_marginTop">@dimen/leftRightMargin</item>
        <item name="android:layout_marginLeft">@dimen/leftRightMargin</item>
        <item name="android:layout_marginRight">@dimen/leftRightMargin</item>
    </style>

    <!-- Style for the question number -->
    <style name="numberQuestion">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/leftRightMargin</item>
        <item name="android:paddingLeft">@dimen/leftRightPadding</item>
        <item name="android:paddingRight">@dimen/leftRightPadding</item>
    </style>

</resources>
